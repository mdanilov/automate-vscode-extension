{
    "name": "automate",
    "icon": "images/icon.png",
    "version": "0.1.8",
    "publisher": "maxdanify",
    "engines": {
        "vscode": "^1.63.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "displayName": "ESR Automate",
    "description": "Extension for ESR Automate Textual Language",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "ESR Labs",
        "Automate",
        "AUTOSAR",
        "ARXML"
    ],
    "main": "./dist/extension",
    "contributes": {
        "languages": [
            {
                "id": "atm",
                "aliases": [
                    "Automate",
                    "atm"
                ],
                "extensions": [
                    ".atm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "atm",
                "scopeName": "source.automate",
                "path": "./syntaxes/atm.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Automate",
            "properties": {
                "automate.useRTextServer": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Automate RText service."
                }
            }
        }
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./",
        "lint": "eslint . --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "rtext-lsp-adapter": "file:./modules/rtext-lsp-adapter",
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "ts-loader": "^9.3.1",
        "typescript": "^5.0.2",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mdanilov/automate-vscode-extension"
    }
}
